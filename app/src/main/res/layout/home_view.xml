<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="124dp">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F6E4E4"
            app:contentScrim="#F6E4E4"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:toolbarId="@+id/toolbar">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                style="@style/ToolbarTheme"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:background="#F6E4E4"
                android:minHeight="?attr/actionBarSize"
                app:titleTextAppearance="@style/TitleBarTextAppearance">

            </android.support.v7.widget.Toolbar>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView39"
                    android:layout_width="131dp"
                    android:layout_height="43dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="9dp"
                    android:fontFamily="@font/visbycfbold"
                    android:text="PawFella"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.934" />
            </android.support.constraint.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/a774079"
                android:gravity="right">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/visbycfdemibold"
                    android:text="Hi Hafid Abi"
                    android:textColor="#000000"
                    android:textSize="14dp" />

                <ImageButton
                    android:id="@+id/notification"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:layout_marginEnd="10dp"
                    android:background="#F8EBEB"
                    android:src="@drawable/gambarbell_artinotif" />

            </LinearLayout>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            tools:context="com.zakiyah.Pawfella.pawapp.Main3Activity">

            <TextView
                android:id="@+id/textView"
                android:layout_width="127dp"
                android:layout_height="26dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:text="Available Offers"
                app:layout_constraintEnd_toEndOf="parent"
                android:fontFamily="@font/visbycfdemibold"
                app:layout_constraintHorizontal_bias="0.033"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/visbycfdemibold"
                android:text="Paw Today"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frameLayout7" />


            <FrameLayout
                android:id="@+id/frameLayout7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frameLayout">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <FrameLayout
                        android:id="@+id/pasClinicMenu"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:background="#ffffff"
                        android:visibility="visible"
                        app:layout_constraintStart_toEndOf="@+id/askVetMenu"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp" />

                            <ImageButton
                                android:id="@+id/pawClinicButton"
                                android:layout_width="match_parent"
                                android:layout_height="58dp"
                                android:background="#ffffff"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/veterinary3" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp" />

                            <TextView
                                android:id="@+id/tulisanpawclinic"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/visbycfdemibold"
                                android:text="Paw Clinic"
                                android:textAlignment="center"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/askVetMenu"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:background="#ffffff"
                        android:visibility="visible"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:background="#ffffff"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <ImageButton
                                android:id="@+id/askVetButton"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="#ffffff"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/veterinary512" />

                            <TextView
                                android:id="@+id/tulisanaskvet"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/visbycfdemibold"
                                android:text="AskVet"
                                android:textAlignment="center"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/pawStoreMenu"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:visibility="visible"
                        app:layout_constraintStart_toEndOf="@+id/pasClinicMenu"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp" />

                            <ImageButton
                                android:id="@+id/pawStoreButton"
                                android:layout_width="80dp"
                                android:layout_height="58dp"
                                android:background="#ffffff"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/petshop" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp" />

                            <TextView
                                android:id="@+id/tulisanpawstore"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/visbycfdemibold"
                                android:text="Paw Store"
                                android:textAlignment="center"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/pawHotelMenu"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/pawStoreMenu"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp" />

                            <ImageButton
                                android:id="@+id/pawHotelButton"
                                android:layout_width="80dp"
                                android:layout_height="58dp"
                                android:background="#ffffff"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/pethouse" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp" />

                            <TextView
                                android:id="@+id/tulisanpawhotel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/visbycfdemibold"
                                android:text="Paw Hotel"
                                android:textAlignment="center"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/pawSalonMenu"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:visibility="visible"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/askVetMenu">

                        <LinearLayout
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp" />

                            <ImageButton
                                android:id="@+id/pawSalonButton"
                                android:layout_width="80dp"
                                android:layout_height="58dp"
                                android:background="#ffffff"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/grooming" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp" />

                            <TextView
                                android:id="@+id/tulisanpawsalon"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/visbycfdemibold"
                                android:text="Paw Salon"
                                android:textAlignment="center"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/pawAdoptMenu"
                        android:layout_width="80dp"
                        android:layout_height="115dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:visibility="visible"
                        app:layout_constraintStart_toEndOf="@+id/pawSalonMenu"
                        app:layout_constraintTop_toBottomOf="@+id/pasClinicMenu">

                        <LinearLayout
                            android:layout_width="80dp"
                            android:layout_height="115dp"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp" />

                            <ImageButton
                                android:id="@+id/pawAdoptButton"
                                android:layout_width="80dp"
                                android:layout_height="58dp"
                                android:background="#ffffff"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/missing" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp" />

                            <TextView
                                android:id="@+id/tulisanpawadoption"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/visbycfdemibold"
                                android:text="Adoption Paw"
                                android:textAlignment="center"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/pawCornerMenu"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:visibility="visible"
                        app:layout_constraintStart_toEndOf="@+id/pawAdoptMenu"
                        app:layout_constraintTop_toBottomOf="@+id/pawStoreMenu">

                        <LinearLayout
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp" />

                            <ImageButton
                                android:id="@+id/pawCornerButton"
                                android:layout_width="80dp"
                                android:layout_height="58dp"
                                android:background="#ffffff"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/park" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp" />

                            <TextView
                                android:id="@+id/tulisanpawcorner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/visbycfdemibold"
                                android:text="Paw Corner"
                                android:textAlignment="center"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/emergencyMenu"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="#ffffff"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/pawCornerMenu"
                        app:layout_constraintTop_toBottomOf="@+id/pawHotelMenu">

                        <LinearLayout
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp" />

                            <ImageButton
                                android:id="@+id/emergencyButton"
                                android:layout_width="80dp"
                                android:layout_height="58dp"
                                android:background="#ffffff"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/emergencyfhd" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp" />

                            <TextView
                                android:id="@+id/tulisanemergency"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/visbycfdemibold"
                                android:text="Emergency"
                                android:textAlignment="center"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </FrameLayout>
                </android.support.constraint.ConstraintLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="349dp"
                android:layout_height="120dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.526"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView">

                <include layout="@layout/paw_carousel" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/news1"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/pawtoday1"
                app:layout_constraintEnd_toStartOf="@+id/news3"
                app:layout_constraintHorizontal_bias="0.4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2">

            </FrameLayout>

            <FrameLayout
                android:id="@+id/news3"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/pawtoday3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2">

            </FrameLayout>

            <FrameLayout
                android:id="@+id/news2"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/pawtoday2"
                app:layout_constraintEnd_toStartOf="@+id/news4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/news1">

            </FrameLayout>

            <FrameLayout
                android:id="@+id/news4"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/pawtoday4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/news3">

            </FrameLayout>

            <FrameLayout
                android:id="@+id/pembatasbawah"
                android:layout_width="70dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="12dp"
                android:background="#ffffff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/news2">

            </FrameLayout>

        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        app:elevation="0dp"
        app:itemBackground="@color/colorAccent"
        app:itemIconTint="@android:color/darker_gray"
        app:itemTextColor="@android:color/darker_gray"
        app:menu="@menu/bottom_nav_menu" />

</android.support.design.widget.CoordinatorLayout>